<h1>Comments</h1>
<% domain = @post.url.split("/")[2] %>
<div class="container">
  <div class="row well">
    <div class="span-4 "><%= link_to @post.title, @post.url %></div>
      <div class="span-4 muted">(<%= domain %>)</div> <br>
      <div class="span-4 pull-left"><strong> <%= "#{@post.comments.count} #{@post.comments.count == 1 ? "comment" : "comments"}" %></strong></div>
    </div>

  </div>
</div>
<br>
<br>
<table class="table">
  <tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <td><blockquote><%= comment.content %></blockquote></td>
    </tr> 
  <% end %>
  </tbody>
</table>

