<% domain = @post.url.split("/")[2] %>
      <h1>Comments</h1>
<div class="container">
  <div class="well">
      <div style="margin-bottom: 5px;" class="lead"><%= link_to @post.title, @post.url %></div>
      <div class="muted" >(<%= domain %>)</div>
      <div class="pull-left"><strong> <%= "#{@post.comments.count} #{@post.comments.count == 1 ? "comment" : "comments"}" %></strong></div>
  </div>
</div>
<br>
<br>
<table class="table">
  <tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <td><blockquote><%= comment.content %></blockquote></td>
    </tr> 
  <% end %>
  </tbody>
</table>

