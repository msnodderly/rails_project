
<%= form_for @comment , :url => { :action => :create, :controller => :comments} do |f| %>
  <%= f.label(:content, "Leave a new comment:") %>
  <%= f.text_area :content, :size => "40x4" %><br>
  <%= f.submit "Submit Comment", :class => "btn"  %>
  <%= f.hidden_field(:post_id, :value => @post.id) %>
<% end %>


